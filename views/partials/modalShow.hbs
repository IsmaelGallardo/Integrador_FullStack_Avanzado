<!-- Modal de creación de producto -->
<div id="createModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createModalLabel">Crear producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="createProductForm" action="/tienda" method="post">
          <input type="hidden" name="_method" value="post">

          <div class="form-group">
            <label for="name">Nombre:</label>
            <input type="text" class="form-control" id="name" name="product[name]" required>
          </div>

          <div class="form-group">
            <label for="description">Descripción:</label>
            <textarea class="form-control" id="description" name="product[description]" required></textarea>
          </div>

          <div class="form-group">
            <label for="price">Precio:</label>
            <input type="number" class="form-control" id="price" name="product[price]" required>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Crear producto</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal de edición -->
<div id="editModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Editar producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/tienda/{{product._id}}" method="post">
          <input type="hidden" name="_method" value="post">

          <div class="form-group">
            <label for="producto">Nombre:</label>
            <input type="text" class="form-control" id="producto" name="product[name]" value="{{product.name}}"
              required>
          </div>

          <div class="form-group">
            <label for="description">Descripción:</label>
            <textarea class="form-control" id="description" name="product[description]"
              required>{{product.description}}</textarea>
          </div>

          <div class="form-group">
            <label for="precio_unitario">Precio:</label>
            <input type="number" class="form-control" id="precio_unitario" name="product[price]"
              value="{{product.price}}" required>
          </div>

          <button type="submit" class="btn btn-primary my-2">Actualizar producto</button>
        </form>
      </div>
    </div>
  </div>
</div>
</main>

<!-- Modal de eliminación -->
<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Eliminar producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>¿Estás seguro de que deseas eliminar el producto?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <form action="/tienda/{{product._id}}/delete" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
</div>

